<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/appBackground2</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/newColorAcceent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.button" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="colorButtonNormal">@color/buttonColorNormal</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="AppTheme.TextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/textView_textColor</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
